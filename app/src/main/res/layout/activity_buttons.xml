<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ButtonsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:theme="@style/ColorSecondaryGreen"
                app:checkedButton="@id/btnFirst"
                app:selectionRequired="true"
                app:singleSelection="true">

                <Button
                    android:id="@+id/btnFirst"
                    style="@style/Widget.App.Button.OutlinedButton.Green"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="房地产" />

                <Button
                    android:id="@+id/btnSecond"
                    style="@style/Widget.App.Button.OutlinedButton.Green"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="商铺" />

                <Button
                    android:id="@+id/btnThird"
                    style="@style/Widget.App.Button.OutlinedButton.Green"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="出租房" />
                <Button
                    android:id="@+id/btnFour"
                    style="@style/Widget.App.Button.OutlinedButton.Green"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="生意转让" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill:\nWidget.Material3.Button \nWidget.Material3.Button.UnelevatedButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill Button" />

            <Button
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill With Icon"
                app:icon="@drawable/ic_checked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tonal: Fill浅色背景" />

            <Button
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill tonal Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outline \n Widget.Material3.Button.OutlinedButton 和 ?attr/materialButtonOutlinedStyle 是同一个样式" />

            <Button
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outline Button1" />

            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outline Button2" />

            <Button
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outline Button2"
                app:icon="@drawable/ic_checked" />


            <Button
                android:id="@+id/textButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text button" />

            <Button
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text button"
                app:icon="@drawable/ic_checked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elevated: 带有阴影的轮廓按钮，绝对必要时才使用它们，例如当按钮需要从视觉上分离图案背景时"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnElevated"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elevated Button" />

            <Button
                android:id="@+id/btnElevatedIcon"
                style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elevated With Icon"
                app:icon="@drawable/ic_checked"
                app:rippleColor="@color/color_23B97C"
                app:strokeColor="@color/color_23B97C"
                app:strokeWidth="5dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


